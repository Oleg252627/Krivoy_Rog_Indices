@model IEnumerable<Client.Models.Index>

@{
    ViewBag.Title = "Table_index";
    Layout = null;
}

<h2>Таблица индексов</h2>

<div class="table_block">
    <table class="table table-condensed  table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name_Index)
            </th>
            <th class="row_linck_hv">
                Узнать улицы
            </th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name_Index)
                </td>
                <td class="row_linck">
                    @Html.ActionLink("Узнать улицы", "Details", new { id=item.Id },new{@class="linc_street"}) 
                </td>
            </tr>
        }

    </table>
</div>

